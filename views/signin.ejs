<% include partials/header %>
<br><br>
<div id="container" class="container">
  <div class="row text-white">
    <div class="col-sm-6 offset-sm-3 text-center">
      <h1 class="display-4">Log in</h1>
      <div class="info-form">
        <form action="signin" method="post" class="form-inlin justify-content-center">
          <div class="form-group">
            <label class="sr-only">Email</label>
            <input type="email" name="mailIn" class="form-control" placeholder="Type your email">
          </div>
          <div class="form-group">
            <label class="sr-only">Password</label>
            <input type="password" name="passwordIn" class="form-control" placeholder="type your password">
          </div>
             <p style="color:red"><% if(locals.bad) { %>
             <%= bad %> <%}%></p>
          <button type="submit" class="btn btn-success ">Log in</button>
        </form>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %>
